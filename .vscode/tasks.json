{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build all (g++)",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${fileDirname}\\*.cpp",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-I",
                "${fileDirname}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Generated task for C++ compilation with g++"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++-12 生成活动文件",
            "command": "/usr/bin/g++-12",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ]
}