{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug C++ (g++)", // 调试配置名称
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}\\${fileBasenameNoExtension}.exe", // 要调试的可执行文件路径
            "args": [],
            "stopAtEntry": false, // 是否在程序入口处停止
            "cwd": "${fileDirname}", // 程序运行的工作目录
            "environment": [],
            "externalConsole": false, // 输入输出的关键: false 表示在集成终端运行
            "MIMode": "gdb", // 调试模式，使用 gdb
            "miDebuggerPath": "/usr/bin/gdb", // gdb 路径
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build all (g++)" // 在调试前运行编译任务
        }
    ]
}